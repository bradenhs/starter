{
  "name": "starter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "tslint -p tsconfig.json --type-check",
    "start": "ts-node fuse",
    "build": "NODE_ENV='production' ts-node fuse",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "dependencies": {
    "csstips": "^0.2.0",
    "fnx": "^0.0.32",
    "lodash": "^4.17.4",
    "material-ui": "^0.18.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-tap-event-plugin": "^2.0.1",
    "typestyle": "^1.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^3.0.3",
    "@types/jest": "^19.2.3",
    "@types/lodash": "^4.14.64",
    "@types/material-ui": "^0.17.7",
    "@types/node": "^7.0.22",
    "@types/react": "^15.0.24",
    "@types/react-dom": "^15.5.0",
    "@types/react-tap-event-plugin": "^0.0.30",
    "coveralls": "^2.13.1",
    "fs-extra": "^3.0.1",
    "fuse-box": "^2.0.0",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "ts-node": "^3.0.4",
    "tslint": "^5.3.2",
    "tslint-config-standard": "^5.0.2",
    "tslint-react": "^3.0.0",
    "typescript": "^2.3.3"
  }
}
