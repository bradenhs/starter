{
  "name": "starter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "precommit": "./scripts/pre_commit_hook.sh",
    "format": "prettier --write --no-semi --single-quote --bracket-spacing --braces-spacing --jsx-single-quote --space-before-function-paren \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -p tsconfig.json --type-check",
    "start": "ts-node fuse",
    "build": "NODE_ENV='production' ts-node fuse",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "dependencies": {
    "csstips": "^0.2.0",
    "lodash": "^4.17.4",
    "material-ui": "^0.18.5",
    "mobx": "^3.1.16",
    "mobx-react": "^4.2.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-tap-event-plugin": "^2.0.1",
    "typestyle": "^1.3.7",
    "webpack": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/lodash": "^4.14.68",
    "@types/material-ui": "^0.17.14",
    "@types/node": "^7.0.33",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.0",
    "@types/react-tap-event-plugin": "^0.0.30",
    "@types/webpack": "^3.0.1",
    "coveralls": "^2.13.1",
    "husky": "^0.14.2",
    "jest": "^20.0.3",
    "prettier-miscellaneous": "^1.5.2-fix",
    "ts-jest": "^20.0.4",
    "ts-node": "^3.0.4",
    "tslint": "^5.3.2",
    "typescript": "^2.3.3"
  }
}